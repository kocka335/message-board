
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

<% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

 <div class="form-group">
 <label class="col-sm-1"><span class="label label-default">名前</span></label>
 <div class="col-sm-11"><%= f.text_field :name, class: "form-control" %></div>
</div>

 <div class="form-group">
<label class="col-sm-1"><span class="label label-default">内容</span></label>
   <div class="col-sm-11"><%= f.text_area :body, class: "form-control"  %></div>
  </div>
  
 <div class="form-group">
<label class="col-sm-1"><span class="label label-default">年齢</span></label>
   <div class="col-sm-11"><%= f.text_field :age, class: "form-control"  %></div>
</div>


 <div class="form-group">
   <div id="submit">
      <%= f.submit class: "btn btn-sm btn-primary" %></div>
    </div>
 </div>
  
<% end %>
