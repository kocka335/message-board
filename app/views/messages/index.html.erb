<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<form class="form-horizontal">

<%= form_for(Message.new) do |f| %>

 <div class="form-group">
 <label class="col-sm-1"><span class="label label-default">名前</span></label>
 <div class="col-sm-11"> <%= f.text_field :name %></div>
</div>

 <div class="form-group">
<label class="col-sm-1"><span class="label label-default">内容</span></label>
   <div class="col-sm-11"><%= f.text_area :body %></div>

 <div class="form-group">
   <div id="submit">
      <%= f.submit class: "btn btn-sm btn-primary" %></div>
    </div>
 
  
<% end %>
</div>

</form>